extends layouts/journal

block header
  include includes/bootstrap-markdown
  include includes/marked
  include includes/superagent

  button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
    span.sr-only Toggle navigation
    span.icon-bar
    span.icon-bar
    span.icon-bar
  a.navbar-brand(href='index.html') SB Admin

block sidebar
  ul.nav.navbar-nav.side-nav
    li.active
      a(href='index.html')
        i.fa.fa-fw.fa-dashboard
        |  Dashboard
    li
      a(href='charts.html')
        i.fa.fa-fw.fa-bar-chart-o
        |  Charts

block content
  .row
    .col-lg-12.no-pad
      //textarea(name='content', data-provide='markdown', rows='100')
      textarea(name='content', rows='10')#main-editor
      script.
        $('#main-editor').markdown({
          savable: true,
          height: $(window).height() - $('nav').height(), // super janky, fails on resize
          onShow: function(e) {
            $('.md-editor').css('border-color', 'black');
            $('.md-input').css('padding', '5px');
          }
        });
